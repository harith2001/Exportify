<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin_Notifi_Details">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="85dp"
        android:layout_height="59dp"
        android:layout_marginTop="25sp"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="180dp"
        android:text="Notification Details"
        android:textColor="#121111"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="294dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ednotifiTopic"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/green_layout"
            android:ems="10"
            android:hint="Enter Notification topic"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/edNotifiType"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/green_layout"
            android:ems="10"
            android:hint="Enter Notification type"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edServiceTopic" />

        <EditText
            android:id="@+id/edDescription"
            android:layout_width="370dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/green_layout"
            android:ems="10"
            android:hint="Enter Description"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edServiceType" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="90sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:layout_marginTop="5sp"
            android:backgroundTint="@color/btnNewReqAdd"
            android:text="Update"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnDlt"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="5sp"
            android:backgroundTint="#D33F3F"
            android:text="Delete"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>